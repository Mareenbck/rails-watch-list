<div class="container show">

  <div class="head d-flex justify-content-between align-items-baseline">
    <h1><%= @list.name %></h1>
    <%= link_to "+", new_list_bookmark_path(@list)  %>
  </div>
  <div class="nav nav-tabs btn-mybookmark">
    <a class="nav-item nav-link active" href="#first_tab" data-toggle="tab">ðŸŽ¬ TO WATCH</a>
    <a class="nav-item nav-link " href="#second_tab" data-toggle="tab">âœ“ WATCHED</a>
