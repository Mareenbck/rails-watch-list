   <div class="tab-content">
      <div class="tab-pane active" id="first_tab">
        <% @unwatched_bookmarks.each do |bookmark| %>
          <div class="bookmark-card">
            <%= image_tag bookmark.movie.poster_url %>
            <div class="info">
              <h3><%= bookmark.movie.title%></h3>
              <p><%= bookmark.comment %></p>
            </div>
            <div class="logos">
              <i class="far fa-square"></i>
              <i class="far fa-star "></i>
            </div>
          </div>
        <% end %>
      </div>
      <div class="tab-pane" id="second_tab">
        <% @watched_bookmarks.each do |bookmark| %>
          <div class="bookmark-card">
            <%= bookmark.movie.title%>
            <%= bookmark.comment %>
          </div>
        <% end %>
      </div>
    </div>

</div>

